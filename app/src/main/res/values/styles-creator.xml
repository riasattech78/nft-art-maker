<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MaterialAlertDialog.App.Title.Text" parent="MaterialAlertDialog.Material3.Title.Text">
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/primary_light</item>
    </style>
    <style name="canvas_activity_button_tool_style_back">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:clickable">true</item>
        <item name="android:elevation">0dp</item>
        <item name="elevation">0dp</item>
        <item name="borderWidth">0dp</item>
        <item name="fabSize">mini</item>
        <item name="tint">@color/primary_light</item>
        <item name="rippleColor">@color/primary_light</item>
    </style>

    <style name="canvas_activity_button_tool_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:clickable">true</item>
        <item name="android:elevation">0dp</item>
        <item name="elevation">0dp</item>
        <item name="fabSize">mini</item>
        <item name="tint">@color/primary_light</item>
        <item name="rippleColor">@color/primary_light</item>
        <item name="maxImageSize">18dp</item>
    </style>

    <style name="default_large_fab_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fabCustomSize">80dp</item>
        <item name="android:backgroundTint">#eaddff</item>
        <item name="tint">@color/black</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginBottom">24dp</item>
    </style>

    <style name="default_large_fab_style_activity_main" parent="default_large_fab_style">
        <item name="android:src">@drawable/ic_baseline_add_24</item>
    </style>

    <style name="recent_creations_layout_card_view_style">
        <item name="android:layout_margin">5dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="cornerRadius">5dp</item>
        <item name="cardElevation">2dp</item>
    </style>

    <style name="recent_creations_text_view_style">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:text">TextView</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="recent_creations_text_view_style2" parent="recent_creations_text_view_style">
        <item name="android:textSize">24sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <style name="activityCanvas_bottomNavigationView_style_constraints" parent="Widget.Material3.BottomNavigationView">
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
    </style>

    <style name="recentCreationsLayout_imageView_style_constraints">
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
    </style>


    <style name="recentCreationsLayout_imageView_style" parent="recentCreationsLayout_imageView_style_constraints">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
    </style>

    <style name="fragmentFilters_button_style">
        <item name="android:layout_weight">0</item>
        <item name="cornerRadius">10dp</item>
        <item name="iconSize">25dp</item>
        <item name="iconTint">@color/primary_light</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/primary_light</item>
    </style>

    <style name="activityCanvas_canvasFragmentHostCardViewParent_style">
        <item name="android:background">@drawable/border_drawable_frame</item>
        <item name="android:elevation">50dp</item>
        <item name="backgroundColor">@android:color/transparent</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="cardElevation">10dp</item>
        <item name="strokeWidth">0dp</item>
    </style>
</resources>