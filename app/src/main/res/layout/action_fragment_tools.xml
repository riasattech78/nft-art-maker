<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragmentTools_rootLayout"
    android:layout_width="wrap_content"
    android:layout_height="?actionBarSize"
    android:background="@color/white"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent">

    <HorizontalScrollView
        android:id="@+id/fragmentTools_primaryScrollView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    style="@style/canvas_activity_button_tool_style_back"
                    android:layout_marginStart="12dp"
                    android:contentDescription="@string/fragmentTools_pencil_tool_content_description" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fragmentTools_pencilButton"
                    style="@style/canvas_activity_button_tool_style"
                    android:layout_marginStart="12dp"
                    android:contentDescription="@string/fragmentTools_pencil_tool_content_description"
                    app:srcCompat="@drawable/ic_baseline_pencil_24" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    style="@style/canvas_activity_button_tool_style_back"
                    android:contentDescription="@string/fragmentTools_fill_tool_content_description" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fragmentTools_fillButton"
                    style="@style/canvas_activity_button_tool_style"
                    android:contentDescription="@string/fragmentTools_fill_tool_content_description"
                    app:srcCompat="@drawable/ic_format_color_fill" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    style="@style/canvas_activity_button_tool_style_back"
                    android:contentDescription="@string/fragmentTools_eraser_tool_content_description" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fragmentTools_eraseButton"
                    style="@style/canvas_activity_button_tool_style"
                    android:contentDescription="@string/fragmentTools_eraser_tool_content_description"
                    app:srcCompat="@drawable/ic_eraser" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    style="@style/canvas_activity_button_tool_style_back"
                    android:contentDescription="@string/fragmentTools_color_picker_tool_content_description" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fragmentTools_colorPickerButton"
                    style="@style/canvas_activity_button_tool_style"
                    android:contentDescription="@string/fragmentTools_color_picker_tool_content_description"
                    app:srcCompat="@drawable/ic_baseline_colorize_24" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    style="@style/canvas_activity_button_tool_style_back"
                    android:contentDescription="@string/fragmentTools_clear_canvas_tool_content_description_" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fragmentTools_resetCanvasButton"
                    style="@style/canvas_activity_button_tool_style"
                    android:contentDescription="@string/fragmentTools_clear_canvas_tool_content_description_"
                    app:srcCompat="@drawable/ic_delete" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    style="@style/canvas_activity_button_tool_style_back"
                    android:contentDescription="@string/fragmentTools_color_palette_tool_content_description" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fragmentTools_colorPalette"
                    style="@style/canvas_activity_button_tool_style"
                    android:contentDescription="@string/fragmentTools_color_palette_tool_content_description"
                    app:srcCompat="@drawable/ic_palette" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    style="@style/canvas_activity_button_tool_style_back"
                    android:contentDescription="@string/fragmentTools_vertical_mirror_tool_content_description" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fragmentTools_verticalMirrorButton"
                    style="@style/canvas_activity_button_tool_style"
                    android:contentDescription="@string/fragmentTools_vertical_mirror_tool_content_description"
                    app:srcCompat="@drawable/ic_border_vertical" />
            </FrameLayout>


            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    style="@style/canvas_activity_button_tool_style_back"
                    android:contentDescription="@string/fragmentTools_vertical_mirror_tool_content_description" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fragmentTools_horizontalMirrorButton"
                    style="@style/canvas_activity_button_tool_style"
                    android:contentDescription="@string/fragmentTools_horizontal_mirror_tool_content_description"
                    app:srcCompat="@drawable/ic_border_horizontal" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    style="@style/canvas_activity_button_tool_style_back"
                    android:contentDescription="@string/fragmentTools_line_tool_content_description" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fragmentTools_lineButton"
                    style="@style/canvas_activity_button_tool_style"
                    android:contentDescription="@string/fragmentTools_line_tool_content_description"
                    app:srcCompat="@drawable/ic_vector_line" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    style="@style/canvas_activity_button_tool_style_back"
                    android:contentDescription="@string/fragmentTools_rectangle_tool_content_description" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fragmentTools_rectangleButton"
                    style="@style/canvas_activity_button_tool_style"
                    android:contentDescription="@string/fragmentTools_rectangle_tool_content_description"
                    app:srcCompat="@drawable/ic_rectangle___copy" />
            </FrameLayout>



        </LinearLayout>
    </HorizontalScrollView>
</FrameLayout>